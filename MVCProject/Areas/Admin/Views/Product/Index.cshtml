@model List<Product>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end mb-2">
            <a asp-controller="Product" asp-action="CreateAndUpdate" class="btn btn-primary">
                Add new product
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Brand</th>
        <th>Model Number</th>
        <th>Price</th>
        <th>In Stock Quantity</th>
        <th>Category</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Title
                </td>
                <td>
                    @obj.Brand
                </td>
                <td>
                    @obj.ModelNumber
                </td>
                <td>
                    @obj.Price
                </td>
                <td>
                    @obj.InStockQuantity
                </td>
                <td>
                    @obj.Category.Name
                </td>
                <td style=" width: 300px;">
                    <div>
                        <a asp-controller="Product" asp-action="CreateAndUpdate" asp-route-id="@obj.Id" class="btn btn-primary">
                            Edit
                        </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

</div>