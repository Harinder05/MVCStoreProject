@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>


        <div class="mb-3">
            <label>Product Name </label>
            <input asp-for="Title" disabled class="form-control" />
            
        </div>
        <div class=" mb-3">
            <label>Description </label>
            <input asp-for="Description" disabled class="form-control" />
            
        </div>

        <div class=" mb-3">
            <label>Brand </label>
            <input asp-for="Brand" disabled class="form-control" />
            
        </div>
        <div class=" mb-3">
            <label>Model Number </label>
            <input asp-for="ModelNumber" disabled class="form-control" />
            
        </div>
        <div class=" mb-3">
            <label>Price </label>
            <input asp-for="Price" disabled class="form-control" />
            
        </div>
        <div class=" mb-3">
            <label>In Stock Quantity </label>
            <input asp-for="InStockQuantity" disabled class="form-control" />
            
        </div>


        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">Go Back</a>
    </div>
</form>
